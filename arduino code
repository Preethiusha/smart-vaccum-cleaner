#include<SoftwareSerial.h>
#include <AFMotor.h>
AF_DCMotor motor1(1);
AF_DCMotor motor2(2);
AF_DCMotor motor3(3);
AF_DCMotor motor4(4);
String value;
int speeds=200;
int lengths;
SoftwareSerial bluetooth(0,1);

void setup() {
  // put your setup code here, to run once:
Serial.begin(9600);     
bluetooth.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly:
  /*motor1.setSpeed(toInt(num));
  motor2.setSpeed(toInt(num));*/
  motor1.setSpeed(254);
  motor2.setSpeed(254);
  motor3.setSpeed(BACKWARD);
if(bluetooth.available())
{
  value=bluetooth.readString();
  Serial.println(value);
  if (value=="F")
  {
//    while(value=="F")
//    {
    motor1.run(FORWARD);
    motor2.run(FORWARD);
    Serial.println("Forward");
  //}
}
else if(value=="B")
{
     motor1.run(BACKWARD);
    motor2.run(BACKWARD);
    Serial.println("Backward");
  
}

else if(value=="L")
{
  
     motor2.run(BACKWARD);
    motor1.run(FORWARD);
}
else if(value=="R")
{
  
     motor2.run(FORWARD);
    motor1.run(BACKWARD);
}
else
{
   motor2.run(RELEASE);
    motor1.run(RELEASE);
}
}
}
